modules = ["nodejs-20", "python-3.11"]
[agent]
expertMode = true
integrations = ["github:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Expo Dev Server"

[[workflows.workflow]]
name = "Expo Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx expo start --dev-client --tunnel --port 8081"

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 8081
externalPort = 80

[nix]
channel = "stable-25_05"

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd backend && gunicorn -b 0.0.0.0:5000 --workers 2 main:app"]
build = ["bash", "-c", "cd backend && pip install -r requirements.txt"]
