modules = ["nodejs-20", "python-3.11", "postgresql-16"]
[agent]
expertMode = true
integrations = ["github:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Expo Dev Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend Server"

[[workflows.workflow]]
name = "Expo Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx expo start --dev-client --tunnel --port 8081"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Backend Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && PORT=8081 python main.py"

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 8081
externalPort = 80

[[ports]]
localPort = 8082
externalPort = 3000

[nix]
channel = "stable-25_05"

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd backend && python test_startup.py"]
build = ["pip", "install", "-r", "backend/requirements.txt"]
